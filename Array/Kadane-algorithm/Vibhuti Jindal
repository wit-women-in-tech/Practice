 //Function to find the sum of contiguous subarray with maximum sum.
    long long maxSubarraySum(int arr[], int n){
        
        // Your code here
        int max_sum=INT_MIN;
        int curr_sum=0;
        for(int i=0;i<n;i++)
        {
            curr_sum+=arr[i];
            if(max_sum<curr_sum)
            {
                max_sum=curr_sum;
            }
            if(curr_sum<0)
            {
                curr_sum=0;
            }
        }
        return max_sum;
    }
